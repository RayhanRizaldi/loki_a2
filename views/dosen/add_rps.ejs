<%- include('../partials/sidebar'); -%>

<div id="container">
  <h1 class="navbar-brand mb-5">Tambah Rencana Pembelajaran Semester (RPS)</h1>
  <div class="content">
    <form id="form" class="login100-form validate-form flex-sb flex-w" onsubmit="success()" action="/dosen/add-course" method="post">
      <div class="row input">
        <div class="col-sm-3 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">id Kurikulum</h5>
          <input class="input100" type="number" name="curriculum_id" placeholder="Pilih id kurikulum" required />
          <span class="focus-input100"></span>
        </div>
        <div class="col-sm-3 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Kode Matkul</h5>
          <input class="input100" type="text" name="code" required />
          <span class="focus-input100"></span>
        </div>
        <div class="col-sm-5 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Nama Alias</h5>
          <input class="input100" type="text" name="alias" />
          <span class="focus-input100"></span>
        </div>
      </div>
      <div class="row input">
        <div class="col-sm-5 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Mata Kuliah</h5>
          <input class="input100" type="text" name="name" required />
          <span class="focus-input100"></span>
        </div>
        <div class="col-sm-3 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Sks</h5>
          <input class="input100" type="number" name="credit" required />
          <span class="focus-input100"></span>
        </div>
        <div class="col-sm-3 wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Semester</h5>
          <input class="input100" type="number" name="semester" required />
          <span class="focus-input100"></span>
        </div>
      </div>
      <div class="row input">
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <h5 class="txt1">Deskripsi</h5>
          <input class="input100" type="text" name="description" />
          <span class="focus-input100"></span>
        </div>
      </div>

      <!-- <div class="wrap-input100 validate-input" data-validate="text is required">
            <h5 class="txt1">Materi</h5>
            <input class="input100" type="text" name="pass"/>
            <span class="focus-input100"></span>
          </div> -->

      <div class="container-button100-form-btn m-t-30">
        <button class="button100-form-btn" type="submit">SIMPAN</button>
        <button class="button100-form-btn" type="button" onclick="page()">KEMBALI</button>
      </div>
    </form>
  </div>
</div>
<script>
  function success() {
    Swal.fire("Good job!", "Data saved", "success")
      .then(function () {
        // document.getElementById('form').submit();
        window.setTimeout(function () {
          window.location = "/dosen/courses";
        }, 700);
      })
      .catch((error) => console.log(error));
  }
  function page() {
    window.location = "/dosen/courses";
  }
</script>
<%- include('../partials/footer'); -%>
